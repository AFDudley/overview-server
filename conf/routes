# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Interim URLs
GET     /                           controllers.Application.index()
GET	    /documentsets		        controllers.Application.showDocumentSets()
POST	/documentsets		        controllers.DocumentSet.newDocumentSet()
POST	/documentsets/:id/delete	controllers.Application.deleteDocumentSet(id: Long)

GET		/init						controllers.Tree.temporarySetup()

GET		/documentsets/:id/view		controllers.Application.viewDocumentSet(id: Long)
GET   /documents/:id/view controllers.Application.viewDocument(id: Long)

# Good URLs
GET /documentsets/:id controllers.DocumentSet.index(id: Long)
GET /documentsets/:id/tree/root controllers.Tree.root(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
