# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET	    /documentsets		        controllers.Application.showDocumentSets()
POST	/documentsets		        controllers.Application.newDocumentSet()
POST	/documentsets/:id/delete	controllers.Application.deleteDocumentSet(id: Long)

GET		/documentsets/:id/view		controllers.Application.viewDocumentSet(id: Long)
GET   /documents/:id/view controllers.Application.viewDocument(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
